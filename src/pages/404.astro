---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from '../images/error-404.png';
---

<MainLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center gap-7">
    <Image src={error} alt="404 Error" class="mt-10" height={250} width={250} />
    <h1 class="text-5xl font-bold">Page Not Found</h1>
    <p class="text-2xl mb-10">Sorry, we couldn't find the page you were looking for.</p>
    <a href="/" class="bg-indigo-500 hover:bg-indigo-700 transition text-white font-bold py-2 px-4 rounded">Go Back Home</a>
  </div>
</MainLayout>