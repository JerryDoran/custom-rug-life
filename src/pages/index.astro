---
import MainLayout from '../layouts/MainLayout.astro';
import heroImage from '../images/banner.webp';
import { Image } from 'astro:assets';
---

<MainLayout>
      <!-- Top Grid -->
    <div class="grid grid-cols-1 gap-5 lg:grid-cols-2 items-center">
      <div class="text-xl max-md:text-center">
        <h1 class="animate-slidein text-5xl max-md:text-4xl font-bold mt-4 mb-8 leading-normal xl:leading-tight xl:text-6xl max-md:text-center">
          Beautiful <span class="text-indigo-700">Custom </span>Designs  are <span class="text-indigo-700">Underfoot</span>
        </h1>
        <div class="animate-fadeIn opacity-0 ">
          <h2 class="text-3xl max-md:text-2xl font-bold text-gray-700 mb-8">Why choose us?</h2>
        <p> We are known for providing high quality custom made rugs at affordable prices. 
        </p>
        
        <div class="flex gap-4 pt-8 max-md:justify-center items-center">
         
          <a href="/rugs" class="bg-indigo-700 hover:bg-indigo-600  text-white font-bold py-4 px-8 rounded transition">View Rugs</a>
          <a class="bg-indigo-700 hover:bg-indigo-600  text-white font-bold py-4 px-8 rounded transition" href="/contact">Contact</a>
        </div>
      </div>
    </div>        
      <img src='../images/banner.webp' class="animate-slideinRight w-[90%] max-lg:w-1/2 max-lg:mx-auto h-auto rounded-lg order-first lg:order-last " alt="Rug Banner"  />    
    </div>
  	</MainLayout>

 
 
  
